{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Resources</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Controllername</th>
                <td>{{ entity.controllerName }}</td>
            </tr>
            <tr>
                <th>Actionname</th>
                <td>{{ entity.actionName }}</td>
            </tr>
            <tr>
                <th>Routename</th>
                <td>{{ entity.routeName }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ entity.status }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{{ entity.createdAt|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{{ entity.updatedAt|date('Y-m-d H:i:s') }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('resources') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('resources_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
