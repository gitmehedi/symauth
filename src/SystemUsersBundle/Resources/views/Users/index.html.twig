{% extends '::system/system.html.twig' %}

{% block body -%}
    <h1>Users list</h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Name</th>
                <th>Email</th>
                <th>Appstatus</th>
                <th>Created At</th>
                <th>Updated At</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for entity in entities %}
                <tr>
                    <td>{{ entity.id }}</td>
                    <td>{{ entity.username }}</td>
                    <td>{{ entity.name }}</td>
                    <td>{{ entity.email }}</td>
                    <td>{{ entity.appStatus }}</td>
                    <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d') }}{% endif %}</td>
                    <td>{% if entity.updatedAt %}{{ entity.updatedAt|date('Y-m-d') }}{% endif %}</td>
                    <td>
                        <div class="btn-group">
                            <a href="{{ path('users_show', { 'id': entity.id }) }}" class="btn btn-primary"> <span class="glyphicon glyphicon-info-sign"></span> Show</a>
                            <a href="{{ path('users_edit', { 'id': entity.id }) }}" class="btn btn-info"> <span class="glyphicon glyphicon-edit"></span> Edit</a>
                        </div>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <div class="btn-group">
        <a  href="{{ path('users_new') }}" class="btn btn-primary">Create a new entry</a>
        <a  href="{{ path('users_new') }}" class="btn btn-info">Create a new entry</a>
    </div>
{% endblock %}
