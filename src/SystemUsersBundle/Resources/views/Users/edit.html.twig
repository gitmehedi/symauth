{% extends '::system/system.html.twig' %}

{% block body -%}
    <h1>Users edit</h1>
    {{ form_start(form)}}
    <div class="row">
        {{ form_row(form.username)}}
        {{ form_row(form.name)}}
        {{ form_row(form.email)}}
        {{ form_row(form.plainpassword.first,{'label':'Password','attr':{'class':'form-control'},'label_attr':{'class':'col-sm-2 control-label'}})}}
        {{ form_row(form.plainpassword.second,{'label':'Confirmed Password','attr':{'class':'form-control'},'label_attr':{'class':'col-sm-2 control-label'}})}}
        {{ form_row(form.captcha) }}
    </div>
    {{ include('SystemUsersBundle:Form:button.html.twig', {'form': form}) }}
    {{ form_end(form)}}

    <div class="btn-group">
        <button class="btn btn-default"><a href="{{ path('users')}}">Back to the list</a></button>
        <div>{{ form(delete_form) }}</div>
    </div>
{% endblock %}
